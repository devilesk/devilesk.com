body {
    margin:0;
}
#controls {
    position:absolute;
    top:100px;
    z-index:1000;
    background-color:darkblue;
    color:white;
    padding-top:5px;
}
#controls img {
    -moz-transform: scaleX(-1);
    -o-transform: scaleX(-1);
    -webkit-transform: scaleX(-1);
    transform: scaleX(-1);
    filter: FlipH;
    -ms-filter: "FlipH";
}
#controls img:hover {
	cursor:pointer;
	cursor:hand;
}
#controls-max {
	display:none;
}
#controls-list {
	font-family:sans-serif;
	font-weight:bold;
	font-size:smaller;
	list-style:none;
	margin:0px;
	padding:3px 10px 5px 25px;
}
#controls-list li{
	padding:0px 5px;
}
#coords {
    position:absolute;
    bottom:0px;
    right:0px;
    z-index:1000;
    background-color:white;
    color:black;
    padding:0px 5px;
}
#output-panel {
	padding:5px 10px 5px 25px;
}
#movespeed {
    width: 40px;
    padding: 0px;
    text-align: right;
}
#movespeed-container {
    padding-left: 65px;
}
