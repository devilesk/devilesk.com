{% extends "root.j2" %}

{% from "macros/breadcrumb.j2" import breadcrumb with context  %}

{% block head %}
    {{ super() }}
    {% block fonts %}
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
    {% endblock fonts %}
    
    {% block css %}
    <link rel="stylesheet" href="{{ media_url('css/site.css') }}">
    {% endblock css %}
    {% block page_head %}{% endblock page_head %}
{% endblock head %}

{% block content %}
{% block breadcrumbs %}
<div class="container">
{{ breadcrumb(resource) }}
</div>
{% endblock breadcrumbs %}
<div class="{{ 'container' if not resource.meta.container_fluid }}{{ 'container-fluid' if resource.meta.container_fluid }}">
    {% block container %}
    <div id="main" role="main">
        <header class="banner clearfix">
            {% block header %}
                {% if resource.meta.header %}<h2>{{ resource.meta.header }}</h2>{% endif %}
            {% endblock header %}
        </header>
        <section class="content">
            {% block main %}
            {% endblock main %}
        </section>
    </div>
    {% endblock container %}
</div>
{% endblock content %}

{% block js %}
    {% block jquery %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    {% endblock jquery %}
    {% block before_scripts %}{% endblock before_scripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    {% if site.config.mode == "production" %}
    <script src="{{ media_url('bootstrap/js/bootstrap.min.js') }}"></script>
    {% else %}
    <script src="{{ media_url('bootstrap/js/bootstrap.js') }}"></script>
    {% endif %}
    {% block scripts %}
    <script src="{{ media_url('js/index.js') }}"></script>
    {% endblock scripts %}
    {% block analytics %}
    {% include "includes/analytics.j2" %}
    {% endblock analytics %}
{% endblock js %}